properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '9', daysToKeepStr: '', numToKeepStr: '9')), [$class: 'JobLocalConfiguration', changeReasonComment: '']])
properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '9', daysToKeepStr: '', numToKeepStr: '9')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([pollSCM('* * * * *')])])

//Checkout Stage
stage('CheckoutCode'){
git branch: 'development', credentialsId: 'e2a8b6a6-a4ff-4083-9c74-f910f4d976d2', url: 'https://github.com/mss-devops-jan/maven-web-application.git'
}

//Build Stage
stage('build'){
sh "$mavenHome/bin/mvn clean package"
}
